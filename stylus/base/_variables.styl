// Code div
// this styles only affect the style of code area not the code itself


$pre-bg = #f8f8f8
$pre-border-color = #112233
$pre-border-radius = 10px

$pre-after-color = #123


// Code highlight
// this is the code style only code blocks not inline code
// include 
// code color font-size font-family selection color
// shadows text decoration etc.
// and some control of code like comment itlic switch

$code-font-size = 1rem
$code-font-family = 'Ubuntu mono','1234',Cursor,Consoles,monospace
$code-primary-color = #000000
$code-selection-bg = #b3d4fc



$code-token-styles = {
  '.token.function':{
      color : #DD4A68
  },
  '.token.comment':{
    color : rgb(84,84,84),
    font-style: italic
  }
}
