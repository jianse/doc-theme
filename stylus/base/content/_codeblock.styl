
// code block styles only for the container of code not code itself


pre
    background: $pre-bg
    // border 0px solid $pre-border-color
    // border-left :5px solid $pre-border-color
    padding: $pre-padding
    position: relative
    // make scroll bar auto show
    overflow: auto
    // give code block some margin
    margin: 1.2rem 0

    code 
        display: block
        overflow: inherit

    &::after
        color:$pre-after-color
        content: attr(data-lang)
        height:15px
        position: absolute
        right: 0
        top: 0
        text-align: right
        padding: $pre-after-padding
        font-weight: $pre-after-font-weight
        

        
            

