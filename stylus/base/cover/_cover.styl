// cover page style

// this is a dup of _coverpage.styl

.cover
	display: none
	height 100vh
	align-items: center

	&.show
		display: flex
		
	&.has-mask .mask
		background-color $cover-bg
		opacity 0.8
		position absolute
		top 0
		height 100%
		width 100%

	.cover-main
		flex 1
		z-index: 1
		text-align: center

		> p:last-child a
			border-color var(--theme-color, $theme-color)
			border-radius 2rem
			border-style solid
			border-width 1px
			box-sizing border-box
			color var(--theme-color, $theme-color)
			display inline-block
			font-size 1.05rem
			letter-spacing 0.1rem
			margin 0.5rem 1rem
			padding 0.75em 2rem
			text-decoration none
			transition all 0.15s ease

			&:last-child
				background-color var(--theme-color, $theme-color)
				color #fff

			&:hover
				color inherit
				opacity 0.8	

	a
		color inherit
		text-decoration none

	&:hover
		text-decoration none

	span
		color:inherit  